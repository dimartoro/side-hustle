<!-- Loop over each object in the projects array -->
{{#each gigs as |gig| }}
    <div class="border-2 border-indigo-700 pl-3 bg-indigo-700 text-white py-2 w-auto font-semibold rounded-t-md">
    {{!-- <h2> --}}
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{!-- {{{get_emoji}}} --}}
      <a class="hover:text-red-300" href="/gig/{{gig.id}}">{{gig.title}}</a>
    {{!-- </h2> --}}
    </div>
    <hr>
<div class="w-auto p-6 shadow-lg bg-green-400 rounded-b-md mb-5">
  <div class="mb-4">
    <p>
      {{gig.details}}
    </p>
  </div>
  
  <div class="bg-green-300 pl-1">
    <p class="mb-2">
      {{!-- <span for="img" aria-label="money">ğŸ’²</span> --}}
      {{!-- <span><i class="fa-sharp fa-solid fa-chart-network"></i>Hola</span> --}}
      <!-- Pass needed_funding value to the helper function -->
      <span class="font-bold">Needed by {{format_date gig.target_available_date}}</span>
    </p>
    <p>Created by {{gig.user.name}} on {{format_date gig.post_date}}</p>
  </div>
</div>
{{/each}}
